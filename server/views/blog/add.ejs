<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Create Time Table</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap & Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .main {
            flex-grow: 1;
        }

        .sidebar {
            min-height: 100vh;
        }

        .navbar {
            background-color: white !important;
            border-bottom: 1px solid #dee2e6;
            box-shadow: none;
        }
    </style>
</head>

<body>
    <div class="container-fluid main p-0">
        <div class="row g-0">

            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 bg-dark p-0 sidebar">
                <%- include('../layout/sidebar') %>
            </div>

            <!-- Main Content + Header -->
            <div class="col-md-9 col-lg-10 p-0">
                <%- include('../layout/header') %>

                    <div class="p-4">
                        <h3 class="text-primary mb-4">Create Blog</h3>

                        <% if (message) { %>
                            <div class="alert alert-info">
                                <%= message %>
                            </div>
                            <% } %>

                                <form action="/create-blog" method="POST" novalidate>
                                    <div class="mb-3">
                                        <label for="title" class="form-label">Title</label>
                                        <input type="text" name="title" id="title" class="form-control" required>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">User</label>
                                        <input type="text" class="form-control" value="<%= user.name %>" readonly>
                                    </div>

                                    <div class="mb-3">
                                        <label for="content" class="form-label">Content</label>
                                        <textarea name="content" id="content" class="form-control" rows="5"
                                            required></textarea>
                                    </div>

                                    <button type="submit" class="btn btn-primary w-100">Create Blog</button>
                                </form>


                    </div>

                    <%- include('../layout/footer') %>
            </div>
        </div>
    </div>

    <!-- JS Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


</body>

</html>