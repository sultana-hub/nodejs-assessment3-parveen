<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>All Blog List</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap & Font Awesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

  <style>
    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .main {
      flex-grow: 1;
    }

    .sidebar {
      min-height: 100vh;
    }

    .navbar {
      background-color: white !important;
      border-bottom: 1px solid #dee2e6;
      box-shadow: none;
    }

    .row.g-0>[class^="col-"] {
      border: none !important;
    }
  </style>
</head>
<body>
<div class="container mt-5">
    <h3 class="text-primary mb-4">All Blogs</h3>

    <% if (message) { %>
        <div class="alert alert-info"><%= message %></div>
    <% } %>

    <div class="mb-3 text-end">
        <a href="/create-blog" class="btn btn-primary">Create Blog</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Author</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            <% if (entry && entry.length > 0) { %>
                <% entry.forEach((tt, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= tt.title %></td>
                        <td><%= tt.content %></td>
                        <td><%= tt.author.name %> (<%= tt.author.role %>)</td>
                        <td>
                            <% if (user._id.toString() === tt.author._id.toString() || user.role === "Admin") { %>
                                <div class="d-flex gap-2">
                                    <a href="/blog/admin/edit/<%= tt._id %>" class="btn btn-sm btn-warning">
                                        Edit
                                    </a>
                                    <form action="/blog/admin/delete/<%= tt._id %>?_method=DELETE" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            <% } else { %>
                                <span class="text-muted">No actions</span>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="5" class="text-center text-muted">No blogs found.</td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
