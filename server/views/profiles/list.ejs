<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>User List</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap & Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .main {
            flex-grow: 1;
        }

        .sidebar {
            min-height: 100vh;
        }

        .navbar {
            background-color: white !important;
            border-bottom: 1px solid #dee2e6;
            box-shadow: none;
        }

        .row.g-0>[class^="col-"] {
            border: none !important;
        }
    </style>
</head>

<body>

    <div class="container-fluid main  p-0">
        <div class="row g-0">

            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 bg-dark p-0 sidebar">
                <%- include('../layouts/sidebar') %>
            </div>

            <!-- Main Content + Header -->
            <div class="col-md-9 col-lg-10 p-0">
                <%- include('../layouts/header') %>

                    <div class="p-4">
                        <h3 class="text-primary mb-4">Users Profiles</h3>

                        <% if (message && message.length> 0) { %>
                            <div class="alert alert-info">
                                <%= message %>
                            </div>
                            <% } %>
                                <form method="GET" action="/admin/profile-list" class="d-flex mb-4" role="search">
                                    <input type="text" name="query" class="form-control me-2 border border-secondary"
                                        placeholder="Search by name or email"
                                        value="<%= typeof query !== 'undefined' ? query : '' %>">
                                    <button class="btn btn-outline-primary" type="submit">Search</button>
                                </form>

                                <div class="table-responsive">
                                    <table
                                        class="table table-bordered table-hover table-striped align-middle text-start text-wrap">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>#</th>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>Company</th>
                                                <th>Website</th>
                                                <th>Status</th>
                                                <th>Education</th>
                                                <th>Skills</th>
                                                <th>Experience</th>
                                                <!-- <th>Actions</th> -->
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (profiles && profiles.length> 0) { %>
                                                <% profiles.forEach((profile, index)=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= index + 1 %>
                                                        </td>
                                                        <td>
                                                            <%= profile.user?.name || 'N/A' %>
                                                        </td>
                                                          <td>
                                                            <%= profile.user?.email || 'N/A' %>
                                                        </td>
                                                        <td>
                                                            <%= profile.company || 'N/A' %>
                                                        </td>
                                                        <td>
                                                            <%= profile.website || 'N/A' %>
                                                        </td>
                                                        <td>
                                                            <%= profile.status || 'N/A' %>
                                                        </td>

                                                        <!-- Education -->
                                                        <td>
                                                            <% if (profile.education && profile.education.length> 0) {
                                                                %>
                                                                <% profile.education.forEach(edu=> { %>
                                                                    <div><strong>
                                                                            <%= edu.degree %>
                                                                        </strong><br> @ <%= edu.school %>
                                                                    </div>
                                                                    <% }) %>
                                                                        <% } else { %>
                                                                            <span class="text-muted">No education</span>
                                                                            <% } %>
                                                        </td>

                                                        <!-- Skills -->
                                                        <td>
                                                            <%= profile.skills?.join(', ') || ' N/A' %>
                                                        </td>

                                                        <!-- Experience -->
                                                        <td>
                                                            <% if (profile.experience && profile.experience.length> 0) {
                                                                %>
                                                                <% profile.experience.forEach(exp=> { %>
                                                                    <div>
                                                                        <strong>
                                                                            <%= exp.title %>
                                                                        </strong><br> @ <%= exp.company %>
                                                                            (<%= new Date(exp.from).toLocaleDateString()
                                                                                %>)
                                                                    </div>
                                                                    <% }) %>
                                                                        <% } else { %>
                                                                            <span class="text-muted">No
                                                                                experience</span>
                                                                            <% } %>
                                                        </td>

                                                        <!-- <td>
                                                            Actions or buttons
                                                        </td> -->
                                                    </tr>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="9" class="text-center text-muted">No
                                                                    profiles found.</td>
                                                            </tr>
                                                            <% } %>
                                        </tbody>

                                    </table>
                                </div>
                    </div>
                    <%- include('../layouts/footer') %>
            </div>

        </div>
    </div>

    <!-- Footer -->


    <!-- JS Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>