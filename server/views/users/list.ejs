<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>User List</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap & Font Awesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

  <style>
    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .main {
      flex-grow: 1;
    }

    .sidebar {
      min-height: 100vh;
    }

    .navbar {
      background-color: white !important;
      border-bottom: 1px solid #dee2e6;
      box-shadow: none;
    }

    .row.g-0>[class^="col-"] {
      border: none !important;
    }
  </style>
</head>

<body>

  <div class="container-fluid main  p-0">
    <div class="row g-0">

      <!-- Sidebar -->
      <div class="col-md-3 col-lg-2 bg-dark p-0 sidebar">
        <%- include('../layouts/sidebar') %>
      </div>

      <!-- Main Content + Header -->
      <div class="col-md-9 col-lg-10 p-0">
        <%- include('../layouts/header') %>

          <div class="p-4">
            <h3 class="text-primary mb-4">User List</h3>

            <% if (message && message.length> 0) { %>
              <div class="alert alert-info">
                <%= message %>
              </div>
              <% } %>
                <form method="GET" action="/admin/user-list" class="d-flex mb-4" role="search">
                  <input type="text" name="query" class="form-control me-2 border border-secondary"
                    placeholder="Search by name or email" required>

                  <button class="btn btn-outline-primary" type="submit">Search</button>
                </form>
                <div class="table-responsive">
                  <table class="table table-bordered table-hover table-striped align-middle">
                    <thead class="table-dark">
                      <tr>
                        <th>#</th>
                        <th>Avatar</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>City</th>
                        <th>Status</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (users && users.length> 0) { %>
                        <% users.forEach((user, index)=> { %>
                          <tr>
                            <td>
                              <%= index + 1 %>
                            </td>
                            <td>
                            <% if (user.avatar.startsWith('http') || user.avatar.startsWith('//')) { %>
                              <img src="<%= user.avatar %>" alt="Avatar" class="img-thumbnail" width="80" height="80">
                              <% } else { %>
                                <img src="/<%= user.avatar.replace(/\\/g, '/') %>" alt="Avatar" class="img-thumbnail"
                                  width="80" height="80">
                                <% } %>
                                 </td>
                                  <td>
                                    <%= user.name %>
                                  </td>
                                  <td>
                                    <%= user.email %>
                                  </td>
                                  <td>
                                    <%= user.phone %>
                                  </td>
                                  <td>
                                    <%= user.city %>
                                  </td>
                                  <td>
                                    <% if (!user.isBlock) { %>
                                      <span class="badge bg-success">Active User</span>
                                      <% } else { %>
                                        <span class="badge bg-danger">Blocked User</span>
                                        <% } %>
                                  </td>
                                  <td>
                                    <div class="d-flex gap-2">
                                      <form action="/admin/toggle-block/<%= user._id %>" method="POST" class="d-inline">
                                        <% if (!user.isBlock) { %>
                                          <button type="submit" class="btn btn-danger btn-sm">Block</button>
                                          <% } else { %>
                                            <button type="submit" class="btn btn-success btn-sm">Unblock</button>
                                            <% } %>
                                      </form>

                                      <form action="/admin/delete/<%= user._id %>" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger"
                                          onclick="return confirm('Are you sure?')">
                                          <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                      </form>
                                    </div>

                                  </td>
                          </tr>
                          <% }) %>
                            <% } else { %>
                              <tr>
                                <td colspan="6" class="text-center text-muted">No users found.</td>
                              </tr>
                              <% } %>
                    </tbody>
                  </table>
                </div>
          </div>
          <%- include('../layouts/footer') %>
      </div>

    </div>
  </div>

  <!-- Footer -->


  <!-- JS Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>