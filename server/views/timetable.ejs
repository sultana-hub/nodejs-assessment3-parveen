<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Time Table List</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap & Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .main {
            flex-grow: 1;
        }

        .sidebar {
            min-height: 100vh;
        }

        .navbar {
            background-color: white !important;
            border-bottom: 1px solid #dee2e6;
            box-shadow: none;
        }

        .row.g-0>[class^="col-"] {
            border: none !important;
        }
    </style>
</head>

<body>

    <div class="container-fluid main p-0">
        <div class="row g-0">

            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 bg-dark p-0 sidebar">
                <%- include('layout/sidebar') %>
            </div>

            <!-- Main Content + Header -->
            <div class="col-md-9 col-lg-10 p-0">
                <%- include('layout/header') %>

                    <div class="p-4">
                      
                        <h3 class="text-primary mb-4">Time Table List</h3>

                        <% if (message && message.length> 0) { %>
                            <div class="alert alert-info">
                                <%= message %>
                            </div>
                            <% } %>

                                <form method="GET" action="/timetable-list" class="d-flex mb-4" role="search">
                                    <input type="text" name="query" class="form-control me-2 border border-secondary"
                                        placeholder="Search by subject or class" required>
                                    <button class="btn btn-outline-primary" type="submit">Search</button>
                                </form>

                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover table-striped align-middle">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>#</th>
                                                <th>Subject</th>
                                                <th>Teacher</th>
                                                <th>Day</th>
                                                <th>Start Time</th>
                                                <th>End Time</th>
                                                <% if (user.role==='Teacher' ) { %>
                                                    <th>Actions</th>
                                                    <% } %>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (entry && entry.length> 0) { %>
                                                <% entry.forEach((tt, index)=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= index + 1 %>
                                                        </td>
                                                        <td>
                                                            <%= tt.subject %>
                                                        </td>
                                                        <td>
                                                            <%= user.name %>
                                                        </td>
                                                        <td>
                                                            <%= tt.day %>
                                                        </td>
                                                        <td>
                                                            <%= tt.startTime %>
                                                        </td>
                                                        <td>
                                                            <%= tt.endTime %>
                                                        </td>
                                                        <% if (user._id.toString()===tt.teacher._id.toString()) { %>
                                                            <td>
                                                                <div class="d-flex gap-2">
                                                                    <a href="/timetable/edit/<%= tt._id %>?_method=PUT"
                                                                        method="POST" class="btn btn-sm btn-warning">
                                                                        <i class="fas fa-edit"></i> Edit
                                                                    </a>

                                                                    <form
                                                                        action="/delete/timetable/<%= tt._id %>?_method=delete"
                                                                        method="POST" class="d-inline">
                                                                        <button type="submit"
                                                                            class="btn btn-sm btn-danger"
                                                                            onclick="return confirm('Are you sure?')">
                                                                            <i class="fas fa-trash-alt"></i> Delete
                                                                        </button>
                                                                    </form>

                                                                </div>
                                                            </td>
                                                            <% } %>
                                                    </tr>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="7" class="text-center text-muted">No
                                                                    timetable entries found.</td>
                                                            </tr>
                                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                    </div>

                    <%- include('layout/footer') %>
            </div>

        </div>
    </div>

    <!-- JS Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>